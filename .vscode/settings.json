{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.includeLanguages": {
    "astro": "html"
  },
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "editor.formatOnSave": true,
  "prettier.documentSelectors": ["**/*.astro"],
  "autoimport.filesToScan": "**/*.{ts,tsx,astro}"
}
